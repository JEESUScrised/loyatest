# Настройки сервера
PORT=3000
API_PORT=3002
NODE_ENV=development

# База данных MongoDB
MONGODB_URI=mongodb://localhost:27017/loya
MONGODB_DB_NAME=loya

# JWT секрет для аутентификации
JWT_SECRET=your-super-secret-jwt-key-here

# Telegram Bot API
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_SECRET=your-webhook-secret

# Тестовый режим (для разработки без Telegram)
TEST_MODE=false
TEST_USER_ID=123456789

# Настройки системы лояльности
POINTS_EXPIRY_DAYS=90
MIN_POINTS_FOR_EXPIRY=10
